<UserControl x:Class="GenesysCharacterCreator.UpDownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenesysCharacterCreator"
             mc:Ignorable="d" d:DesignWidth="210" Height="100">

    <Viewbox>
        <Grid Width="210" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="0,0,5,0" Click="DownButton_Click">
                <Rectangle Width="45" Height="10" Fill="Black"></Rectangle>
            </Button>
            <Button Grid.Column="1" Margin="5,0,0,0" Click="UpButton_Click">
                <Grid>
                    <Rectangle Width="45" Height="10" Fill="Black"></Rectangle>
                    <Rectangle Width="10" Height="45" Fill="Black"></Rectangle>
                </Grid>
            </Button>
        </Grid>
    </Viewbox>
</UserControl>
