<UserControl x:Class="GenesysCharacterCreator.CareerCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenesysCharacterCreator"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30" Background="White" Mouse.MouseUp="UserControl_MouseUp">
    <Viewbox>
        <Grid>
            <Ellipse Width="30" Height="30" StrokeThickness="1" Stroke="Black" StrokeDashArray="2,2,2,2"/>
            <Grid Name="Checkmark" Visibility="Hidden">
                <Rectangle Width="3" Height="24" Fill="Black" RenderTransformOrigin=".5,.5">
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="45"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle Width="3" Height="24" Fill="Black" RenderTransformOrigin=".5,.5">
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="-45"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
            </Grid>
        </Grid>
    </Viewbox>
</UserControl>
